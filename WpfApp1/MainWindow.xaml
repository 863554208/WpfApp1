<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <!-- 菜单栏 -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Home">
                <MenuItem Header="新建" />
                <MenuItem Header="打开" />
                <MenuItem Header="保存" />
            </MenuItem>
            <MenuItem Header="工具">
                <MenuItem Header="剪切" />
                <MenuItem Header="复制" />
                <MenuItem Header="粘贴" />
            </MenuItem>
            <MenuItem Header="相机">
                <MenuItem Header="关于" />
            </MenuItem>
            <MenuItem Header="数据">
                <MenuItem Header="关于" />
            </MenuItem>
            <MenuItem Header="警报">
                <MenuItem Header="关于" />
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="关于" />
            </MenuItem>
        </Menu>

        <!-- 主体内容区域 -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="LightGray">
            <TextBlock Text="日志区域" HorizontalAlignment="Center" Margin="10"/>
            <!-- 你可以在这里放置日志信息或其他控件 -->
        </StackPanel>

        <!-- 右边区域 -->
        <Grid DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <!-- 上部菜单栏 -->
                <RowDefinition Height="Auto"/>
                <!-- 下部主要内容区域 -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 上部菜单栏 -->
            <Menu Grid.Row="0">
                <MenuItem Header="工程主界面" />
                <MenuItem Header="I/O 输入界面" />
                <MenuItem Header="I/O 输出界面" />
                <MenuItem Header="手动调试" />
                <MenuItem Header="Auto" />
            </Menu>

            <!-- 下部主体内容区域 -->
            <Grid Grid.Row="1">
                <TextBlock Text="这是主体内容区域" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
